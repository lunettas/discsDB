<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>discs DB demo</title>
  </head>
  <body>
    {{#if success}}
      <p>Password reset successful!</p>
    {{else if error}}
      <p>Error: {{error}}</p>
    {{else}}
      <form class="pwReset" action="/forgot-password" method="POST">
        <div class="form-group">
          <label>Email</label>
          <input type="email" class="form-control" name="email" placeholder="Enter your email">
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    {{/if}}
    {{#unless success}}
      <form class="pwReset" action="/forgot-password" method="POST">
        <div class="form-group mb-3">
          <label>Confirmation Code</label>
          <input type="text" class="form-control" name="resetCode" placeholder="Enter confirmation code">
        </div>
        <div class="form-group">
          <label>New Password</label>
          <input type="password" class="form-control" name="plaintextPassword" placeholder="Enter new password">
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
    {{/unless}}
  </body>
</html>
