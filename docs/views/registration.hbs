<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>discs DB demo</title>
  </head>
  <body>
    <h1>Welcome to discsDB</h1>
    <p></p>
    <form class="registration" action="/register" method="POST">
        <div class="form-group mb-3 bg-dark">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" autocomplete="username" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" autocomplete="new-password" class="form-control" name="plaintextPassword" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>

  <script>
  {{#if registrationSuccess}}
    // Hide the form when registrationSuccess is true
    const registrationForm = document.querySelector('.registration');
    registrationForm.style.display = 'none';

    const confirmationMessage = document.createElement('div');
    confirmationMessage.classList.add('confirmation-message');
    confirmationMessage.innerHTML = `
<div style="display: flex; justify-content: center; align-items: center;">
    <div style="display: block; text-align: center; margin: 0 auto;">
        <h2>Registration Successful!</h2>
        <div>You are the best!</div>
        <img src="/IMG/champs.jpg" alt="two random disc golfers with trophies" style="padding: 50px; max-width: 90%; max-height: 90%; height: auto; display: block; margin: 0 auto; margin-bottom: 10px;">
        <p style="font-size: 12px; margin: 0;">
            Photo by <a href="https://www.flickr.com/photos/pdga/52360198176/in/album-72177720302119915/">Justin Anderson / PDGA</a> under a <a href="https://creativecommons.org/licenses/by-nc-nd/2.0/">CC BY-NC-ND 2.0 license</a>. 
            <span style="font-size: 12px;">&copy; [2022] [Justin Anderson]</span>.
        </p>
    </div>
</div>
`;
    document.body.appendChild(confirmationMessage);
  {{/if}}
</script>           
  </body>
</html>

